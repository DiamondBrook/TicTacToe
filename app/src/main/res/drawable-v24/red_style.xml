<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_pressed="true">


        <shape>
            <gradient android:angle="45" android:startColor="@drawable/red_primary" android:endColor="@drawable/red_secondary" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
            <corners android:radius="10dp"/>
        </shape>

    </item>
    <item>

        <shape>
            <gradient android:angle="45" android:startColor="@drawable/red_secondary" android:endColor="@drawable/red_primary"/>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
            <corners android:radius="10dp"/>
        </shape>

    </item>
</selector>